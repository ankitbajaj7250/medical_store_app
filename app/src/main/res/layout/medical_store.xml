<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medical_store"
    android:background="@drawable/back_logo"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/R_layout1"
            android:layout_width="match_parent"
            android:layout_height="152dp">

            <ImageView
                android:id="@+id/agwani_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParetLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:src="@drawable/medical_store_logo" />

            <TextView
                android:id="@+id/txt_agwani_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/agwani_image"
                android:text="Agwani Medical And General Store"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_agwani_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_agwani_heading"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/agwani_image"
                android:text="9414147250"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R_layout2"
            android:layout_width="match_parent"
            android:layout_height="152dp">

            <ImageView
                android:id="@+id/abhishek_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParetLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:src="@drawable/medical_store_logo" />

            <TextView
                android:id="@+id/txt_abhishek_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/abhishek_image"
                android:text="Abhishek pharma"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_abhishek_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_abhishek_heading"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/abhishek_image"
                android:text="9636302626"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/R_layout3"
            android:layout_width="match_parent"
            android:layout_height="152dp">

            <ImageView
                android:id="@+id/krishana_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParetLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:src="@drawable/medical_store_logo" />

            <TextView
                android:id="@+id/txt_krishana_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="38dp"
                android:layout_toRightOf="@id/krishana_image"
                android:text="krishana Medical"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_krishana_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_krishana_heading"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/krishana_image"
                android:text="9636302626"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>